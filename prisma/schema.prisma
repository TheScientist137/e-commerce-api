generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
}

model TelescopeType {
  id Int @id @default(autoincrement())
  type String 
  description String
  telescopes Telescope[]
}

model Telescope {
  id Int @id @default(autoincrement())
  name String
  description String
  price Int
  brand String
  telescopeTypeId Int
  telecopeType TelescopeType @relation(fields: [telescopeTypeId], references: [id]) 
}